{
    // 预置
    "presets": [
        [
            "@babel/env",
            {
                "targets": {
                    "node": "current"
                },
                "useBuiltIns": "usage",
                "corejs": {
                    "version": 3,
                    // TODO：允许使用“提议”阶段特性的polyfill
                    "proposals": true
                }
            }
        ],
        "@babel/typescript",
    ],

    "plugins": [
        // 这是下面装了插件再添加
        "@babel/plugin-transform-arrow-functions",
        // 用于转换语法特性“类属性”
        "@babel/plugin-proposal-class-properties",
        // 用于转换语法特性“对象扩展”
        "@babel/plugin-proposal-object-rest-spread",
    ]
}